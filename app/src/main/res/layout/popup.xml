<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="317dp"
        android:layout_height="458dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:foregroundGravity="center"
        app:cardBackgroundColor="@android:color/holo_blue_dark"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardBackgroundColor="#e4bfef"
        card_view:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/HelpMenuStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\n ----- HELP MENU -----\n\nFrom the drawer you can go everywhere in the app\n\nAt the time you are in a section you can use those interactions:\n\n\u25CF Long tap: To add a monster to favorites long tap on it\n\n\u25CF Slide: When you are inside a monster you can use slide your finger to swap between info, pics and videos of the monster\n\n\u25CF Tap: The action of touching the screen, you can use that in a lot of spots\n\nTo exit this window tap the screen.
\nIf you have any issues send them there:\nbadalid@elpuig.xeill.net"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>